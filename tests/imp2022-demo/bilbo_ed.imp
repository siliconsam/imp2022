
! Store a simple value
%dynamic %integer fubar %alias "fubar" = 5

! Store a simple count
%dynamic %integer count %alias "count" = 3

%dynamic %routine zerocount %alias "xzero"
    count = 0
%end

%dynamic %routine increment %alias "xinc"
    %on %event 11 %start
        count = -8
    %finish

    count = count + 1
    %signal 11 %if count = 8
%end

%dynamic %routine decrement %alias "xdec"
    %on %event 11 %start
        count = 7
    %finish

    count = count - 1
    %signal 11 %if count = -9
%end

%dynamic %integer %function value %alias "xvalue"
    %result = count
%end

%routine getPC %alias "get_pc"
    *mov_ %eax, [%ebp+4]
%end

%endoffile
